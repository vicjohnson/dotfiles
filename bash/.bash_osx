# ---------- homebrew autocomplete ----------
source $(brew --repository)/Library/Contributions/brew_bash_completion.sh

# ---------- Application aliases ----------
alias subl="/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl"
alias lip="ipconfig getifaddr en0"
alias bi="brew install"
alias bu="brew uninstall"
alias bl="brew list"
alias bs="brew search"


export CLICOLOR=1

if [[ -f ~/.dircolors ]]; then
    if [[ -f /usr/local/bin/gdircolors ]]; then
        eval $(/usr/local/bin/gdircolors ~/.dircolors)
    else
        echo "GNU coreutils must be installed."

        while true; do
            read -p "Do you want to install them with Homebrew? (y/n) " yn
            case $yn in
                [Yy]* )
                    brew install coreutils --default-names
                    eval $(/usr/local/bin/gdircolors -b ~/.dircolors)

                    break
                    ;;
                [Nn]* )
                    break
                    ;;
                * )
                    echo "Please answer yes or no."
                    ;;
            esac
        done
    fi
else
    export LSCOLORS=gxbxfxdxcxegedabagaced
fi


if [[ -e /usr/local/bin/gls ]]; then
    alias lla="/usr/local/bin/gls -al --color=auto"
else
    alias lla="ls -al"
fi