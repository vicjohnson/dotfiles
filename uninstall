#! /usr/bin/env bash

files=(
    ~/.bashrc
    ~/.bash_styles
    ~/.bash_prompt
    ~/.bash_aliases
    ~/.bash_welcome
    ~/.bash_osx
    ~/.bash_ubuntu
    ~/.dircolors
    ~/.gitconfig
    ~/.gitprompt
    ~/.vim
    ~/.vimrc
    ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User/Shell-Unix-Generic.sublime-settings
    ~/.config/sublime-text-3/Packages/User/Shell-Unix-Generic.sublime-settings
)

for f in "${files[@]}"; do
    if [ -h "$f" ]; then
        rm -rf "$f"
    fi
done
